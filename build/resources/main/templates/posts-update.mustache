{{>layout/header}}

<div class="container d-flex justify-content-center align-items-center">
    <div style="width: 85%;margin-top: 50px;">

        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력해주세요." value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" style="height: 300px"
                          placeholder="내용을 입력해주세요.">{{post.content}}</textarea>
            </div>
        </form>

        <div style="margin-bottom: 5px;">
            <div class="d-flex justify-content-end">
                <a href="/" role="button" class="btn btn-secondary" style="margin-right: 5px;">목록으로</a>
                <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
            </div>
        </div>

        <input type="hidden" id="id" value="{{post.id}}">
    </div>
</div>


{{>layout/footer}}